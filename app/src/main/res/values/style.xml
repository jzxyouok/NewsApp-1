<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme" parent="@style/BaseAppTheme">
            <item name="android:windowTranslucentStatus">false</item>
            <!--<item name="android:windowTranslucentNavigation">true</item>-->
            <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
            <item name="android:statusBarColor">@color/colorGreen</item>
    </style>

    <style name="BottomDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetstyle</item>
        <!--<item name="android:windowSoftInputMode">stateAlwaysVisible</item>&lt;!&ndash;显示软件盘&ndash;&gt;-->
    </style>

    <style name="CustomBottomSheetstyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    
    <style name="activityTheme" parent="@android:style/Theme">
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <!--navigationbar-->
    <style name="navigation_bar_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>
    <!--animation_menu-->
    <style name="animation_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--tablayout-->
    <style name="tablayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fillViewport">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="user_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="user_divider2">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/colorGreen</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="user_divider4">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@color/colorGreen</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="user_divider3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/colorDarkGreen</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="user_divider5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="user_divider6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="user_divider7">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="user_divider8">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/colorGrey2</item>
    </style>

    <style name="user_divider9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>
    <style name="menu_whole_style" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="add_menu_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="add_imageview_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="add_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="toolbar_style">
        <item name="android:drawable">@mipmap/jinri</item>
    </style>
</resources>

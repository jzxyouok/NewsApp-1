<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688">

    <ImageButton
        android:id="@+id/btn_feedback2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:src="@mipmap/feedback2" />

    <ImageButton
        android:id="@+id/btn_feedback"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:src="@mipmap/feedback" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="440dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bird3" />


        <EditText
            android:id="@+id/etx_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/username_password"
            android:hint="请输入手机号"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#80cbc4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_phone_toast"
            android:paddingLeft="30dp"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/username_password">

            <EditText
                android:id="@+id/etx_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:maxLines="1"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="#009688"
                android:textColorHint="@color/colorLightGreen"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imv_see"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:paddingTop="3dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pwd_toast"
            android:paddingLeft="30dp"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/username_password">

            <EditText
                android:id="@+id/etx_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="验证码"
                android:maxLines="1"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="#009688"
                android:textColorHint="#80cbc4"
                android:textSize="15sp" />

            <View style="@style/user_divider4" />

            <TextView
                android:id="@+id/tv_sendcode_register"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="6dp"
                android:text="发送验证码"
                android:textColor="@color/colorDarkGreen"
                android:textSize="13sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/username_password"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/colorDarkGreen"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/tv_toast"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/tvtoast"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="15dp"
            android:textColor="@color/colorDarkGreen" />

    </LinearLayout>

</RelativeLayout>
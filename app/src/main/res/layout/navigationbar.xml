<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_liearlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_home"
            style="@style/navigation_bar_style"
            android:drawableTop="@drawable/home_rbtn"
            android:paddingTop="3dp"
            android:textColor="@drawable/home_textview"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rbtn_video"
            style="@style/navigation_bar_style"
            android:drawableTop="@drawable/video_rbtn"
            android:textColor="@drawable/home_textview"
            android:text="视频" />

        <LinearLayout
            android:id="@+id/btn_linearlayout_add"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_add"/>
        </LinearLayout>

        <RadioButton
            android:id="@+id/rbtn_space"
            style="@style/navigation_bar_style"
            android:drawableTop="@drawable/space_rbtn"
            android:textColor="@drawable/home_textview"
            android:text="动态" />

        <RadioButton
            android:id="@+id/rbtn_user"
            style="@style/navigation_bar_style"
            android:drawableTop="@drawable/user_rbtn"
            android:textColor="@drawable/home_textview"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>
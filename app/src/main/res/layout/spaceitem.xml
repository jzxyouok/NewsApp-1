<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/clicklayout_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gouserhome_space"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_ivm_space"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bird3"
                app:civ_border_color="@color/colorGreen"
                app:civ_border_width="0.5dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="李笑阳"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/createtime_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ssssssss"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/content_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="受到很大点点滴滴活动红红火火恍恍惚惚"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relativelayout_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_space_one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imv_space_one"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/imv_space_two"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/imv_space_one"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/imv_space_two"
                android:layout_toRightOf="@id/imv_space_four"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/imv_space_three"
                android:layout_toRightOf="@id/imv_space_five"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/imv_space_four"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/imv_space_four"
                android:layout_toRightOf="@id/imv_space_seven"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_space_nine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/imv_space_six"
                android:layout_toRightOf="@id/imv_space_eight"
                android:scaleType="fitXY"
                android:layout_margin="1dp"
                android:visibility="gone" />

        </RelativeLayout>

        <!--<TextView-->
            <!--android:id="@+id/readcounter_space"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="5dp"-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="112阅读"-->
            <!--android:textColor="@color/colorGreen"-->
            <!--android:textSize="10sp" />-->
    </LinearLayout>

    <View style="@style/user_divider7"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <LinearLayout
            android:id="@+id/likes_space"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imv_likes_space"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:paddingBottom="2dp"
                android:background="@drawable/likes"/>

            <TextView
                android:id="@+id/tv_likes_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="点赞"
                android:textColor="@color/colorGreen"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_space"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:paddingBottom="2dp"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/tv_comment_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/colorGreen"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forword_space"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingBottom="2dp"
                android:src="@drawable/ic_forword" />

            <TextView
                android:id="@+id/tv_forword_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="转发"
                android:textColor="@color/colorGreen"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/user_divider8" />
</LinearLayout>